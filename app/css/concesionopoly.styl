*
  box-sizing: border-box

body,
html
  margin: 0
  padding: 0

body
  background-color: #fcfcfc

.concesionopoly


.board
  position: relative
  width: 650px
  height: 650px
  margin: 0 auto
  max-width: 100%
  max-height: 100%
  background-image: url('img/concesionopoly/tablero.svg')
  background-repeat: no-repeat
  background-position: center center
  background-size: 100% 100%
  box-shadow: 2px 2px 4px rgba(#000, .2)

  tile-width = 8.6142%
  tile-height = 11.2359%

  .tile
    position: absolute
    cursor: pointer
    box-shadow: inset 0 0 1px red
    background-color: rgba(salmon, .2)

    &:hover
      background-color: rgba(magenta, .2)

    &.on-top,
    &.on-bottom
      width: tile-width
      height: tile-height

    &.on-right,
    &.on-left
      width: tile-height
      height: tile-width

    &.on-corner
      width: tile-height
      height: tile-height

    &.on-right
      right: 0

    &.on-bottom
      bottom: 0

    &.on-left
      left: 0

    &.on-top
      top: 0

    for num in (1..8)
      &[data-tile={s('"%s"', num)}]
        right: round(tile-height + tile-width * (num - 1), 4)

    for num in (10..17)
      &[data-tile={s('"%s"', num)}]
        bottom: round(tile-height + tile-width * (num - 11), 4)

    for num in (19..26)
      &[data-tile={s('"%s"', num)}]
        left: round(tile-height + tile-width * (num - 21), 4)

    for num in (28..35)
      &[data-tile={s('"%s"', num)}]
        top: round(tile-height + tile-width * (num - 31), 4)

  .chip
    position: absolute
    width: 30px
    height: 30px
    background-color: blue