.btn
  display: inline-block
  margin: .5em 0 0
  padding: .5em 1.2em .6em
  width: auto
  border: 0
  border-radius: 0
  cursor: pointer
  line-height: default
  vertical-align: middle
  white-space: normal
  font-family: 'Lato', sans-serif
  font-weight: 300
  font-size: 16px
  background: none
  transition: all .05s
  box-shadow: 3px 3px 0 rgba(#979797, .5)

  &:active
    transform: translate(3px, 3px)
    box-shadow: 0 0 0 -1px rgba(#979797, .5)

  &:focus
    outline: 0

  &.wide
    display: block
    width: 100%

  &.yellow
    color: #fff
    background-color: #FFB951

  &.white
    color: #FFB951
    background-color: #fff