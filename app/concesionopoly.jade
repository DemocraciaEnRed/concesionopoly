doctype
html
head
  meta(charset='utf-8')
  title Concesionopoly
  link(href='concesionopoly.css', rel='stylesheet', type='text/css')
body
  .concesionopoly(data-concesionopoly)
    include templates/index
    .sidebar
      .dices(data-dices)
        h1 Hac√© click para tirar los dados
      .properties-list
        .list(data-properties-list)
    .board(data-board)
      .spacer
      .chip(data-position='0', data-chip)
      .tile.on-corner.on-right.on-bottom(data-tile=0)
      each num in [ 1, 2, 3, 4, 5, 6, 7, 8 ]
        .tile.on-bottom(data-tile=num)
      each num in [ 9, 10, 11, 12, 13, 14, 15, 16 ]
        .tile.on-left(data-tile=num)
      each num in [ 17, 18, 19, 20, 21, 22, 23, 24 ]
        .tile.on-top(data-tile=num)
      each num in [ 25, 26, 27, 28, 29, 30, 31, 32 ]
        .tile.on-top(data-tile=num)
  script(src='//cdn.polyfill.io/v1/polyfill.min.js')
  script(src='concesionopoly.js')
  script.
    var concesionopoly = new Concesionopoly({
      el: document.querySelector('[data-concesionopoly]')
    })
  link(href='https://fonts.googleapis.com/css?family=Lato:300,400,700', rel='stylesheet', type='text/css')
